{
    "name": "node",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "devops:lint": "eslint",
        "devops:lint:fix": "eslint . --fix",
        "devops:prettier": "npx prettier . --write",
        "build": "rimraf ./dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "clean": "rimraf ./dist && npm run build",
        "start:dev": "npx tsx watch ./src/index.ts",
        "start:prod": "node dist/index.js",
        "start:clean": "npm run clean && npm run start:prod",
        "deploy": "npm run clean && npm run build && pm2 stop node ; pm2 start ecosystem.config.js"
    },
    "dependencies": {
        "@epegzz/winston-dev-console": "^1.3.4",
        "ajv": "^8.16.0",
        "chalk": "^4.1.2",
        "figlet": "^1.7.0",
        "module-alias": "^2.2.3",
        "pm2": "^5.4.1",
        "tsc-alias": "^1.8.8",
        "winston": "^3.13.0",
        "winston-console-format": "^1.0.8",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@ethang/eslint-config": "^17.0.11",
        "@types/figlet": "^1.5.8",
        "prettier": "^3.3.2",
        "typescript": "^5",
        "typescript-eslint": "^7.14.1"
    },
    "_moduleAliases": {
        "@/src/shared/logger/*": "dist/src/shared/logger/*",
        "@/config": "dist/config"
    }
}
